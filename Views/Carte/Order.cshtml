@model ShippingDetail
@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>
<form asp-action="Order">
    @Html.ValidationMessage("Empty", new { @class = "text-danger font-weight-bold" })
    <div class="form-group">
        @Html.DisplayNameFor(x => x.FullName)
        <input asp-for="FullName" class="form-control w-50" value="@User.FindFirst("FullName").Value" />
        <span asp-validation-for="FullName" class="text-danger font-weight-bold"></span>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Adress)
        <input asp-for="Adress" class="form-control w-50" />
        <span asp-validation-for="Adress" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.City)
        <input asp-for="City" class="form-control w-50" />
        <span asp-validation-for="City" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Gouvernerat)
        <span asp-validation-for="Gouvernerat" class="text-danger font-weight-bold"></span>
        @Html.DropDownListFor(x => x.Gouvernerat, (List<SelectListItem>)ViewData["CitiesList"], new { @class = "form-control w-50" })
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Zip)
        <input asp-for="Zip" class="form-control w-50" />
        <span asp-validation-for="Zip" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Phone)
        <input asp-for="Phone" class="form-control w-50" />
        <span asp-validation-for="Phone" class="text-danger font-weight-bold"></span>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" value="Complete Order" type="submit" />
    </div>

</form>
